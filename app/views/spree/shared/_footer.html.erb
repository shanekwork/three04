<footer>
	
	<div id="footer-top">
		<div class="container">
			
			<div class="row">
				<div class="col-md-3">
					<%= image_tag("logo-grey.png", class: 'greyLogo') %>
					
				</div>
				<div class="col-md-3">
					<h3>Information</h3>
					<nav id="footer-pages">
						<ul><%= render partial: 'spree/static_content/static_content_list', collection: Spree::Page.by_store(current_store).visible.footer_links, as: :page %></ul>
					</nav>
				</div>
				<div class="col-md-3 foot-contact">
					<h3>Contact</h3>
					<div>
						<i class="fa fa-map-marker">					
						
						<p><%= @add.address %></p>
					</div>
					<div>
						<i class="fa fa-phone">
						<p><%= @add.phone %></p>
					</div>
					<div>
						<i class="fa fa-envelope-o">
						<p><%= @add.email %></p>
					</div>
				</div>
				<div class="col-md-3 newsletter">
					<h3>Newsletter</h3>
					<p>
						Subscribe to the Stationery Store mailing list to receive updates on new arrivals, special offers and other discount information.
					</p>
					<form id="contact_newsletter" class="form-horizontal">
						<fieldset id="fieldNewsletter">						
							<div> 
								<input id="email-newsletter" name="email-newsletter" type="email" value="" placeholder="Enter your e-mail..." required="">
							</div>
 
							<div class="button">
								<input id="submit" type="submit" value="Submit">
							</div>
						</fieldset>
					</form><br>

					<div class="social">
						<ul>
							<li>
								<a title="facebook" href="<%= @add.facebook %>" target="_blank">
									<i class="fa fa-facebook"></i>
								</a>
							</li>

							<li>	
								<a title="twitter" href="<%= @add.twitter %>" target="_blank">
									<i class="fa fa-twitter"></i>
								</a>
							</li>

							<li>	
								<a title="linkedin" href="<%= @add.linkedin %>" target="_blank">
									<i class="fa fa-linkedin"></i>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
			
			
			
		</div>
	</div>
	
	<div id="footer-bottom">
		<div class="container">
			Powered by 39bots
		</div>
	</div>
	
</footer>